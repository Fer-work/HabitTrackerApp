<head>
  <%- include('../shared/head') %>
</head>

<body>
  <%- include('../shared/header') %>
  <h1 class="text-center">Sign Up for our news letter today!</h1>

  <% if (typeof errors !== "undefined") { %> <% errors.forEach(error => { %>

  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong><span><%= error.msg %></span></strong>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% }) %> <% } %>

  <div class="container border mx-auto p-4">
    <form action="/activities" method="post">
      <div class="mb-3 row row">
        <label for="firstName" class="form-label col-sm-4"> First Name </label>
        <div class="col-sm-8">
          <input
            type="text"
            name="firstName"
            id="firstName"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3 row row">
        <label for="lastName" class="form-label col-sm-4"> Last Name </label>
        <div class="col-sm-8">
          <input
            type="text"
            name="lastName"
            id="lastName"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3 row">
        <label for="email" class="col-sm-4 form-label"> Email </label>
        <div class="col-sm-8">
          <input type="email" name="email" id="email" class="form-control" />
        </div>
      </div>

      <div class="mb-3 row">
        <label for="password" class="col-sm-4 form-label"> Password </label>
        <div class="col-sm-8">
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            minlength="8"
          />
        </div>
      </div>

      <div class="mb-3 row">
        <label for="phone" class="col-sm-4 form-label"> Phone </label>
        <div class="col-sm-8">
          <input
            type="tel"
            name="phone"
            id="phone"
            class="form-control"
            minlength="10"
          />
        </div>
      </div>

      <div class="mx-auto container d-flex justify-content-center my-4">
        <input type="submit" value="Sign Up" class="btn btn-primary mx-2" />
        <input type="reset" value="clear" class="btn btn-danger mx-2" />
        <!-- <a href="/autoFill" id="autoFillBtn" class="btn btn-secondary mx-2"
            >Auto-fill</a
          > -->
      </div>
    </form>

    <%- include('../shared/footer') %>
  </div>

  <%- include('../shared/scripts') %>
</body>
